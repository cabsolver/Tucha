<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dialog_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/dialog_photo_content"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_medium"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_photo"
        app:layout_constraintStart_toEndOf="@id/dialog_photo"
        app:layout_constraintTop_toTopOf="@+id/dialog_photo"
        tools:text="@tools:sample/full_names" />

    <ImageView
        android:id="@+id/dialog_messenger_type"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/message_type"
        app:layout_constraintBottom_toBottomOf="@id/dialog_name"
        app:layout_constraintStart_toEndOf="@id/dialog_name"
        app:layout_constraintTop_toTopOf="@id/dialog_name"
        tools:srcCompat="@drawable/ic_vk_24" />

</androidx.constraintlayout.widget.ConstraintLayout>