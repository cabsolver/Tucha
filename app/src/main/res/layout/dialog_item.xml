<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clickableOverlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp"
    android:foreground="?attr/selectableItemBackground">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dialog_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/dialog_photo_content"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_medium"
        android:layout_marginTop="@dimen/text_margin_small"
        android:textAppearance="?attr/textAppearanceListItem"
        app:layout_constraintStart_toEndOf="@id/dialog_messenger_type"
        app:layout_constraintTop_toTopOf="@+id/dialog_photo"
        tools:text="@tools:sample/full_names" />

    <ImageView
        android:id="@+id/dialog_messenger_type"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/message_type"
        app:layout_constraintBottom_toBottomOf="@id/dialog_name"
        app:layout_constraintEnd_toStartOf="@id/dialog_name"
        app:layout_constraintStart_toEndOf="@id/dialog_photo"
        app:layout_constraintTop_toTopOf="@id/dialog_name"
        tools:srcCompat="@drawable/ic_vk_24" />

    <TextView
        android:id="@+id/last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        app:layout_constraintEnd_toStartOf="@id/date"
        app:layout_constraintStart_toStartOf="@id/dialog_messenger_type"
        app:layout_constraintTop_toBottomOf="@+id/dialog_name"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_name"
        tools:text="@tools:sample/date/hhmm" />

    <androidx.cardview.widget.CardView
        android:id="@+id/unread_count_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:visibility="invisible"
        app:cardBackgroundColor="?attr/colorPrimaryInverse"
        app:layout_constraintBottom_toBottomOf="@+id/last_message"
        app:layout_constraintEnd_toEndOf="@id/date"
        app:layout_constraintTop_toTopOf="@id/last_message"
        tools:visibility="visible">

    <TextView
        android:id="@+id/unread_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        tools:text="1" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>