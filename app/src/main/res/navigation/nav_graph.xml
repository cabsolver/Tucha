<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/dialogFragment">

    <fragment
        android:id="@+id/dialogFragment"
        android:name="com.example.tucha.ui.fragment.DialogFragment"
        android:label="Messages"
        tools:layout="@layout/fragment_dialogs_list" >
        <action
            android:id="@+id/action_dialogFragment_to_messagesFragment"
            app:destination="@id/messagesFragment" />
    </fragment>

    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.example.tucha.ui.fragment.MessagesFragment"
        android:label="Dialog"
        tools:layout="@layout/fragment_messages">
        <argument
            android:name="dialog"
            app:argType="com.example.tucha.domain.DomainDialog" />
    </fragment>
</navigation>